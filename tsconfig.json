{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/utils": ["./utils"]
    },
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/index.tsx",
    "components/navigation/Tabs.jsx",
    "components/navigation/TabBarIcon.tsx",
    "app/(tabs)/_layout.jsx",
    "nativewind-env.d.ts",
    "expo-env.d.ts",
    "components/mqtt/MqttConnection.tsx"
  ]
}
